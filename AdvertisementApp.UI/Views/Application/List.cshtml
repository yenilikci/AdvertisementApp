@model List<AdvertisementListDto>

@{
    Layout = "_Layout";
}


<div class="container mt-4 m-height-100vh">
    <h1>Advertisement List</h1>
    <hr />
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end y-3 bg-light p-2">
                <a class="btn btn-primary" asp-action="Create" asp-asp-controller="Application">Add Advertisement</a>
                <hr/>
            </div>
            <table class="table table-sm table-hover table-striped text-center">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@advertisement.Title</td>
                            <td>@advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(advertisement.Status ? "Open" : "Close")</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Advertisement" asp-action="Update">Update</a>
                                <a class="btn btn-danger" asp-controller="Advertisement" asp-action="Remove">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-end y-3 bg-light p-2">
                <a class="btn btn-primary" asp-action="Create" asp-asp-controller="Application">Add Advertisement</a>
                <hr />
            </div>
            <div class="mt-3 text-center lead">
                No advertisements
            </div>
        }
    }
</div>