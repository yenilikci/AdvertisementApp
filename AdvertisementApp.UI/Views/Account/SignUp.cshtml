@model UserCreateModel
@{
    Layout = "_Layout";
}

<div class="container mt-4 m-height-100vh">
    <h1>Sign Up</h1>
    <hr />
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w--75 mx-auto">
        <div class="mb-3">
            <label>Firstname</label>
            <input asp-for="@Model.Firstname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Surname</label>
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Username</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Gender</label>
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">
                    Choose your gender
                </option>
            </select>
        </div>
        <div class="mb-3">
            <label>Phone</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Password </label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Confirm Password</label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">
                Sign Up!
            </button>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</div>